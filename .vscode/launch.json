{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "MacOS CPP",
            "type": "lldb-dap",
            "request": "launch",
            "preLaunchTask": "build cpp_bin",
            "sourcePath": "${workspaceFolder}/cpp",
            "debuggerRoot": "${workspaceFolder}/cpp",
            "program": "${workspaceFolder}/cpp/build/cpp_bin",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
        },
        {
            "name": "Linux CPP",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "build cpp_bin",
            "program": "${workspaceFolder}/cpp/build/cpp_bin",
            "args": [],
            "cwd": "${workspaceFolder}/cpp",
            "stopAtEntry": false,
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
                }
            ],
            "logging": {
                "engineLogging": true
            }
        }
    ]
}